public class Solution {
    public static void nStarTriangle(int n) {
        // Write your code here
        int a=1;
       for(int i=1;i<=n;i++){
           for(int j=0;j<i-1;j++){
               System.out.print(" ");
           }
           for(int k=1;k<=2*n-a;k++){
               System.out.print('*');
           }
           a=a+2;
           System.out.println();
       }
        }
}
